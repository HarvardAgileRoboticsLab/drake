<?xml version="1.0"?>
<robot name="TwistFlexure">


  <link name="L0">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value=" 1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.1 0.1 1" />
      </geometry>
      <material name=""> 
        <color rgba="1 1 1 1" />
      </material>
    </visual>
 </link>

 <link name="L1">
  <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0" />
      <mass value="0.0001" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
  </inertial>
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0" />
    <geometry>
      <sphere radius="0.1"/>
      </geometry>
      <material name="Green"> 
        <color rgba="0 1 0 1" />
      </material>
    </visual>
 </link>

 <link name="L2">
  <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0.1" ixz="0.1" iyy="1" iyz="0.1" izz="1" />
  </inertial>
  <visual>
    <origin xyz="0 0 0.5" rpy="0 0 0" />
    <geometry>
        <box size="0.1 0.1 1" />
      </geometry>
      <material name=""> 
        <color rgba="1 1 1 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -14.97"/>
      <geometry>
        <sphere radius="0" />
      </geometry>
    </collision>
 </link>


  <joint name="bend" type="continuous">
    <origin xyz="0 0 0.5" rpy="0 0 0" />
    <parent link="L0" />
    <child link="L1" />
    <axis xyz="0 1 0" />
    <limit lower="-pi/3" upper="pi/3"/>    
  </joint>

  <joint name="twist" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="L1" />
    <child link="L2" />
    <axis xyz="0 0 1" />
    <limit lower="-pi/3" upper="pi/3"/>
  </joint>


</robot>